{{!-- Layout --}}
{{!< default}}

{{!-- Class for <body> --}}
{{!-- {{#contentFor "mapache_class_body"}}archive-author{{/contentFor}} --}}
{{#contentFor "mapache_class_body"}}is-article is-about-us{{/contentFor}}

{{#post}}

{{!-- Page Header - partials/page/page-hero-header.hbs --}}
{{!-- {{> "page/page-hero-header"}} --}}

<header class="about-header u-relative u-bgDark u-textColorWhite u-flexColumnTop u-flexEnd">
    {{#if feature_image}}
    <img class="about-img u-image u-absolute0 blur-up" srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
        sizes="(max-width: 400px) 300px,(max-width: 730px) 600px, (max-width: 1600px) 100vw"
        src="{{img_url feature_image size="xl"}}" alt="{{title}}" />
    <div class="u-absolute0 dark-gradient zindex2"></div>
    {{/if}}

    <div class="u-relative u-maxWidth1200 u-sizeFullWidth u-container zindex3">
        <div class="about-header-inner u-maxWidth740 u-paddingTop20">
            {{!-- Page Title --}}
            <h1 class="about-title u-md-fontSize36 u-marginBottom20">{{title}}</h1>
            {{#if custom_excerpt}}<p class="about-excerpt u-fontSize20 u-marginTop20">{{custom_excerpt}}</p>{{/if}}
        </div>
    </div>
</header>
<div class="archive-author-inner u-container u-maxWidth1000 u-marginBottom40 u-marginTop50  u-ma">
    <div class="row">
        {{#get "authors" limit="all"}}{{#foreach authors}}

        <div class="col col-s12 s6 l4 u-flexColumnTop u-marginBottom40">
            <article class="author-card u-relative u-flexColumnTop u-flex--1">
                {{!-- Avatar --}}
                <a href="{{url}}" class="author-card-avatar u-relative u-block">
                    {{#if profile_image}}
                    <img class="u-absolute0 u-fullRadius u-round lazyload blur-up" src="{{img_url profile_image size="m"}}"
                        srcset="{{img_url profile_image size="xxs"}}"
                        data-srcset="{{img_url profile_image size="s"}} 300w,{{img_url profile_image size="m"}} 600w"
                        alt="{{t "Hi I'm"}} {{name}}" />
                    {{/if}}
                </a>

                <div class="u-flexColumnTop u-flex--1">
                    <div class="u-flex--1">
                        {{!-- Name --}}
                        <h2 class="author-card-name u-marginTop20 u-fontSize22 u-marginBottom10"><a href="{{url}}"
                                class="u-block">{{name}}</a></h2>
                        {{!-- Website --}}
                        {{#if website}}<a href="{{website}}"
                            class="author-card-website u-fontSize15 u-block u-marginBottom10" target="_blank"
                            rel="noopener noreferrer">{{website}}</a>{{/if}}
                        {{!-- Biography --}}
                        {{#if bio}}<p class="author-card-bio u-fontSizeSmall">{{bio}}</p>{{/if}}
                    </div>

                    {{!-- Buttons Social Media--}}
                    <div class="author-card-media u-flex">
                        {{#if facebook}}<a href="{{facebook_url}}" class="button button--line" title="Facebook"
                            target="_blank" rel="noopener noreferrer">Facebook</a>{{/if}}
                        {{#if twitter}}<a href="{{twitter_url}}" class="button button--line" title="{{twitter}}"
                            target="_blank" rel="noopener noreferrer">Twitter</a>{{/if}}
                    </div>
                </div>
            </article>
        </div>

        {{/foreach}}{{/get}}

    </div>
</div>

{{/post}}
